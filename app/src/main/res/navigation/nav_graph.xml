<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/emptyFragment">

    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.bubelov.coins.ui.fragment.EmptyFragment"
        android:label="EmptyFragment">
        <action
            android:id="@+id/action_emptyFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.bubelov.coins.ui.fragment.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/action_mapFragment_to_supportProjectFragment"
            app:destination="@id/supportProjectFragment" />
    </fragment>
    <fragment
        android:id="@+id/supportProjectFragment"
        android:name="com.bubelov.coins.ui.fragment.SupportProjectFragment"
        android:label="SupportProjectFragment" />

</navigation>